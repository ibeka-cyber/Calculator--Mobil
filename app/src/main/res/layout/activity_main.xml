<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="287dp"
        android:layout_height="86dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="510dp"
        android:background="#2962FF"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_c"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="C"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_par"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="("
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_parc"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text=")"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="/"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="7"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="8"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="9"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_mult"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="*"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="4"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="5"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="6"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="+"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="1"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="2"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="3"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="-"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fac"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="!"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="0"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_vir"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text=","
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn_eq"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="="
                app:cornerRadius="36dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="360dp"
        android:layout_height="87dp"
        android:layout_marginBottom="152dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hesap Makinesi"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_operand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="|"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextNumberDecimal" />

</androidx.constraintlayout.widget.ConstraintLayout>